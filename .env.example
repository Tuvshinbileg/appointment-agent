# Environment Configuration for Appointment Booking System

# Database
# SQLite (default)
DATABASE_URL=sqlite:///./bookings.db

# PostgreSQL (uncomment and configure when ready)
# DATABASE_URL=postgresql://username:password@localhost:5432/booking_db

# Legacy JSON path (for backward compatibility)
BOOKINGS_DB_PATH=bookings.json

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# LLM Settings
# Provider: "gemini" (recommended), "openai", or "ollama" (local only)
LLM_PROVIDER=gemini

# Google Gemini Configuration (Recommended)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
# Available models: gemini-1.5-flash, gemini-1.5-pro, gemini-pro

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
# For custom OpenAI-compatible endpoints (optional)
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1

# Ollama Configuration (Local only - not recommended)
# OLLAMA_MODEL=llama3

# Business Hours
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=18

# CORS Settings (comma-separated)
CORS_ORIGINS=*
